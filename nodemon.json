{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "logs/*",
    "feedback/*",
    "uploads/*",
    "database/*",
    "loadtest-zips/*",
    "resources/*",
    "assignment-examples/*",
    "dockerfiles/*",
    "scripts/*",
    "loadtest-progress.txt" 
  ],
  "verbose": true,
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "env": {
    "NODE_ENV": "production"
  },
  "ext": "js,json"
}